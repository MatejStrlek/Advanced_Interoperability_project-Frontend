<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.algebra.advanced_interoperability_projectfrontend.UpdateMobileController">

    <children>
        <GridPane layoutX="5.0" layoutY="4.0" prefHeight="389.0" prefWidth="590.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <fx:include source="menu.fxml" />
            <Label text="Update mobile" GridPane.columnIndex="1" GridPane.halignment="CENTER">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Label text="Mobile name:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <Label text="Mobile brand:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <Label text="Mobile price:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <Label text="Mobile description:" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
            <Label text="Mobile rating:" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="10.0" right="10.0" />
                </GridPane.margin>
            </TextField>
            <TextField fx:id="brandField" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets left="10.0" right="10.0" />
                </GridPane.margin>
            </TextField>
            <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets left="10.0" right="10.0" />
                </GridPane.margin>
            </TextField>
            <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <GridPane.margin>
                    <Insets left="10.0" right="10.0" />
                </GridPane.margin>
            </TextField>
            <TextArea fx:id="descriptionField" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4" />
            <Button mnemonicParsing="false" onAction="#updateMobile" text="Update" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
         <Label text="Which ID?" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
         <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <GridPane.margin>
               <Insets left="10.0" right="10.0" />
            </GridPane.margin>
         </TextField>
        </GridPane>
    </children>
</AnchorPane>
